<section class="container bg-white rounded-t-md shadow-lg border border-slate-600 p-10 mb-20">
  <h1 class="font-bold text-4xl text-center font-mono">Find closest food stand to Union Square</h1>
  <%= form_with url: "/", class:"mt-20 grid" do |form| %>
    <%= form.label :search_term, "Search for:"%>
    <div class="flex">
      <%= form.text_field :search_term, class: "w-full", required: true %>
      <%= form.submit "Search", class: "bg-blue-600 ml-10 text-white py-2 px-8" %>
    </div>
  <% end %>
</section>
